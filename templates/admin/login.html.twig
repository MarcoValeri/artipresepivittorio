{% extends 'base.html.twig' %}

{% block body %}
    <div class="login">
        {% if error %}
            <div class="login__error-container">
                <h2 class="h4 input-error">{{ error.messageKey|trans(error.messageData, 'security') }}</h2>
            </div>
        {% endif %}
        <form action="{{ path('app_admin_login') }}" method="post">
            <div class="login__form-wrapper">
                <div class="login__container-input">
                    <input class="input-text" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Email*">
                </div>
                <div class="login__container-input">
                    <input class="input-text" type="password" id="password" name="_password" placeholder="Password*">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <input type="hidden" name="_target_path" value="/admin">
                </div>
                <div>
                    <button class="button button__red" type="submit">login</button>
                </div>
                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"> #}
            </div>
        </form>
    </div>
{% endblock %}